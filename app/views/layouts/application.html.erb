<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 
  <body>
   <div class = "container">
      <%= render partial: "layouts/topmenu"%>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <div class = "row">
        <div class = "col-md-9">
          <%= yield %>
        </div>
        <div class = "col-md-3">
          <%= render "layouts/categories", categories: @categories%>
          <%= render "layouts/tags", tags: @tags%>
        </div>
      </div>
    </div>
  </body>

</html>
